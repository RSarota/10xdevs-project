---
import AppLayout from "../layouts/AppLayout.astro";
import MyFlashcardsPage from "../components/MyFlashcardsPage";

export const prerender = false;

// Additional security check (middleware already protects, but explicit is better)
const { user } = Astro.locals;
if (!user) {
  return Astro.redirect("/auth/login");
}
---

<AppLayout title="Moje fiszki - 10xCards" currentPath="/my-flashcards">
  <MyFlashcardsPage client:load />
</AppLayout>
