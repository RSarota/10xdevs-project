---
import AppLayout from "../layouts/AppLayout.astro";
import GenerateFlashcardsPage from "../components/GenerateFlashcardsPage";

export const prerender = false;

// Additional security check (middleware already protects, but explicit is better)
const { user } = Astro.locals;
if (!user) {
  return Astro.redirect("/auth/login");
}
---

<AppLayout title="Generowanie Fiszek - 10xCards" currentPath="/generate-flashcards">
  <GenerateFlashcardsPage client:load />
</AppLayout>
