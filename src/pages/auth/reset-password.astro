---
import AuthLayout from "../../layouts/AuthLayout.astro";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";
import { Card, CardContent, Stack, Title1, Body } from "../../components/apple-hig";
import { Lock } from "lucide-react";

export const prerender = false;
---

<AuthLayout title="Resetowanie hasła - 10xCards">
  <Stack direction="vertical" spacing="lg">
    <!-- Header -->
    <div class="text-center">
      <Stack direction="vertical" spacing="sm" align="center">
        <div
          class="w-14 h-14 flex items-center justify-center rounded-[var(--apple-radius-large)] bg-[hsl(var(--apple-purple))]/10"
        >
          <Lock className="w-7 h-7 text-[hsl(var(--apple-purple))]" />
        </div>
        <Title1 className="text-[hsl(var(--apple-label))] text-3xl sm:text-4xl">Nowe hasło</Title1>
        <Body className="text-[hsl(var(--apple-label-secondary))]">
          Ustaw nowe, bezpieczne hasło dla swojego konta.
        </Body>
      </Stack>
    </div>

    <!-- Reset Password Form Card -->
    <Card elevation="md" padding="xl" variant="grouped">
      <CardContent>
        <ResetPasswordForm client:load />
      </CardContent>
    </Card>
  </Stack>
</AuthLayout>
